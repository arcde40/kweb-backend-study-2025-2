{
  "name": "KWEB-Backend-Study",

  "dockerComposeFile": "docker-compose.yml",

  "service": "app",

  "workspaceFolder": "/workspace",

  "hostRequirements": {
    "cpus": 2
  },

  "postCreateCommand": "npm install -g yarn && apt-get update && apt-get install -y default-mysql-client",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "humao.rest-client",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },

  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  }
}
