doctype html
html
  head
    title 계산기
  body
    h1 계산기

    form(action="/math/sum" method="get")
      label(for="a") 첫 번째 수:
      input(type="number" name="a" required)
      br
      label(for="b") 두 번째 수:
      input(type="number" name="b" required)
      br
      button(type="submit") 더하기
    br

    form(action="/math/sub" method="get")
      label(for="a") 첫 번째 수:
      input(type="number" name="a" required)
      br
      label(for="b") 두 번째 수:
      input(type="number" name="b" required)
      br
      button(type="submit") 빼기

    if result != null
      hr
      h2 계산 결과
      p #{a} #{operator} #{b} = #{result}
