doctype html
html
  head
    title 계산기
    style.
      body {
        font-family: 'Courier New', Courier, monospace;
        background-color: #f0f0f0;
        display: flex;
        justify-content: center;
        padding-top: 50px;
      }
      .container {
        border: 1px solid #333;
        padding: 20px;
        background-color: #fff;
        width: 300px;
      }
      h1 {
        margin-top: 0;
        font-size: 1.5em;
        border-bottom: 1px dashed #333;
        padding-bottom: 10px;
      }
      div {
        margin-bottom: 10px;
      }
      label {
        display: inline-block;
        width: 80px;
      }
      input[type="number"] {
        width: 180px;
        padding: 5px;
        font-family: inherit;
      }
      button {
        width: 100%;
        padding: 10px;
        font-family: inherit;
        font-weight: bold;
        background-color: #fff;
        border: 1px solid #333;
        cursor: pointer;
      }
      button:hover {
        background-color: #333;
        color: #fff;
      }
      .result {
        margin-top: 20px;
        padding-top: 10px;
        border-top: 1px solid #eee;
      }
      .error {
        color: red;
        font-weight: bold;
      }

  body
    .container
      h1 계산기
      

      form(action="/math/calculate" method="POST")
        div
          label(for="a") 숫자 1:
          input(type="number" id="a" name="a" required value=(result ? result.a : ''))
        div
          label(for="b") 숫자 2:
          input(type="number" id="b" name="b" required value=(result ? result.b : ''))
        div
          button(type="submit") 계산하기
      
      if error
        p.error= error

      if result
        .result
          h2 계산 결과
          p #{result.a} + #{result.b} = 
            strong #{result.sum}
          p #{result.a} - #{result.b} = 
            strong #{result.sub}